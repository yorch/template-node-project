{
  "name": "template-node-project",
  "version": "1.0.0",
  "description": "Template NodeJS Project",
  "main": "src/index.js",
  "author": "Jorge Barnaby <jorge.barnaby@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yon clean && babel src -d dist",
    "start": "yon build && yon node -r dotenv/config dist/index.js",
    "dev": "yon build && nodemon --watch src dist/index.js",
    "clean": "rimraf ./dist",
    "format": "prettier -w ."
  },
  "dependencies": {
    "dotenv": "16.4.7",
    "logging": "3.3.0"
  },
  "devDependencies": {
    "@babel/cli": "7.27.0",
    "@babel/core": "7.26.10",
    "@babel/preset-env": "7.26.9",
    "babel-eslint": "10.1.0",
    "eslint": "9.23.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.6",
    "nodemon": "3.1.9",
    "prettier": "3.5.3",
    "rimraf": "6.0.1",
    "yarn-or-npm": "3.0.1"
  },
  "packageManager": "yarn@4.8.1",
  "engines": {
    "node": ">=18"
  }
}
