{
  "name": "template-node-project",
  "version": "1.0.0",
  "description": "Template NodeJS Project",
  "main": "src/index.js",
  "author": "Jorge Barnaby <jorge.barnaby@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yon clean && babel src -d dist",
    "start": "yon build && yon node -r dotenv/config dist/index.js",
    "dev": "yon build && nodemon --watch src dist/index.js",
    "clean": "rimraf ./dist",
    "format": "prettier -w ."
  },
  "dependencies": {
    "dotenv": "16.3.1",
    "logging": "3.3.0"
  },
  "devDependencies": {
    "@babel/cli": "7.22.10",
    "@babel/core": "7.24.4",
    "@babel/preset-env": "7.23.8",
    "babel-eslint": "10.1.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.1.3",
    "nodemon": "3.0.3",
    "prettier": "3.2.4",
    "rimraf": "5.0.5",
    "yarn-or-npm": "3.0.1"
  },
  "packageManager": "yarn@3.2.1",
  "engines": {
    "node": ">=16.0.0"
  }
}
