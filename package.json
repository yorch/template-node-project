{
  "name": "template-node-project",
  "version": "1.0.0",
  "description": "Template NodeJS Project",
  "main": "src/index.js",
  "author": "Jorge Barnaby <jorge.barnaby@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yon clean && babel src -d dist",
    "start": "yon build && yon node -r dotenv/config dist/index.js",
    "dev": "yon build && nodemon --watch src dist/index.js",
    "clean": "rimraf ./dist"
  },
  "dependencies": {
    "dotenv": "8.2.0",
    "logging": "3.2.0"
  },
  "devDependencies": {
    "@babel/cli": "7.10.5",
    "@babel/core": "7.10.5",
    "@babel/preset-env": "7.11.0",
    "babel-eslint": "10.1.0",
    "eslint": "7.5.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "nodemon": "2.0.4",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "yarn-or-npm": "3.0.1"
  }
}
