{
  "name": "template-node-project",
  "version": "1.0.0",
  "description": "Template NodeJS Project",
  "main": "src/index.js",
  "author": "Jorge Barnaby <jorge.barnaby@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yon clean && babel src -d dist",
    "start": "yon build && yon node -r dotenv/config dist/index.js",
    "dev": "yon build && nodemon --watch src dist/index.js",
    "clean": "rimraf ./dist",
    "format": "prettier -w ."
  },
  "dependencies": {
    "dotenv": "16.0.0",
    "logging": "3.3.0"
  },
  "devDependencies": {
    "@babel/cli": "7.17.6",
    "@babel/core": "7.17.5",
    "@babel/preset-env": "7.16.11",
    "babel-eslint": "10.1.0",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "nodemon": "2.0.15",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "yarn-or-npm": "3.0.1"
  },
  "packageManager": "yarn@3.2.0"
}
